    <class>co.edu.uniandes.csw.puntosfidelidad.entities.ClienteEntity</class>
    <class>co.edu.uniandes.csw.puntosfidelidad.entities.ComentarioEntity</class>
    <class>co.edu.uniandes.csw.puntosfidelidad.entities.CompraEntity</class>
    <class>co.edu.uniandes.csw.puntosfidelidad.entities.EventoEntity</class>
    <class>co.edu.uniandes.csw.puntosfidelidad.entities.FotoEntity</class>
